<Window x:Class="SenkouCards.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SenkouCards"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,16,0,0" VerticalAlignment="Top"/>

        <Label Content="Username:" HorizontalAlignment="Center" Margin="0,69,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="Tbx_Username" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" Margin="0,100,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <PasswordBox x:Name="Pbx_Password" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Width="120"/>
        
        <Button x:Name="Btn_Login" Content="Login" HorizontalAlignment="Left" Margin="51,215,0,0" VerticalAlignment="Top" Height="35" Width="80" Click="Btn_Login_Click"/>
        <Button x:Name="Btn_Register" Content="Register" HorizontalAlignment="Left" Margin="170,215,0,0" VerticalAlignment="Top" Height="35" Width="80" Click="Btn_Register_Click" />
        
    </Grid>
</Window>
